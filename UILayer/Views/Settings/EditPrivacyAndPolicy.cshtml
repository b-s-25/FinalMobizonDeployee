@model DomainLayer.AdminSettings.PrivacyAndPolicy
@{
    ViewData["Title"] = "UpdatePrivacyAndPolicy";
    Layout = "~/Views/Admin/_Layout.cshtml";
}



<div class="row container-fluid pr-6">
    <div class="container-fluid mt-3 align-middle">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <div class="">
                    <div class="text-center">
                        <form asp-action="EditPrivacyAndPolicy" method="post">
                            <h2>Privacy And Policy</h2>
                            <input asp-for="id" value="@Model.id" type="hidden" maxlength="500" />
                            <textarea asp-for="content" rows="10" cols="50"></textarea>
                            <br />
                            <div>
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <button class="btn btn-light" style="background-color: #337ab7; border-color: #2e6da4;"><a asp-controller="Settings" asp-action="PrivacyAndPolicy" style="text-decoration: none; color: #fff; font-size: 13px;"><b>Cancel</b></a></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

