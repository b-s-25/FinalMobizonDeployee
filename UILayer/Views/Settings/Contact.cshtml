@model DomainLayer.AdminSettings.AdminContact
@{
    ViewData["Title"] = "Contact";
   
}

<div class="container-fluid mt-3 align-middle">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body" style="padding:65px;">
            <div class="">
                <section class=" flex-fill" style="margin-left: 0px;">
                    <div class=" text-center">

                        <div>
                            <h5><b style=" font-size: 200%;">Contact Us</b></h5>
                        </div>
                        <div class="text-center">
                            <div class=" " container>
                                <div class=" contact us"></div>
                                <div class="box"></div>
                                <div class="icon"></div>
                                <div class=" text">
                                    <h3>Address</h3>
                                    <p>@Model.shopName<br>@Model.district <br> @Model.state <br>Pin:@Model.pincode</p>
                                </div>
                                <div class="box"></div>
                                <div class="icon"></div>
                                <div class=" text">
                                    <h3>Email</h3>
                                    <p> @Model.email</p>
                                </div>
                            </div>
                            <div class="box"></div>
                            <div class="icon"></div>
                            <div class=" text">
                                <h3>Phone</h3>
                                <p>@Model.phoneNumber</p>
                            </div>

                            @if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("role", "Admin"))
                            {
                                <div class=" text-center">
                                    <div class="form-group">
                                        <a href="EditContact" class=" btn btn-primary" style="color: #fff; background-color: #337ab7; border-color: #2e6da4; position: relative; top: 80px; left: 20px; margin-left: 50px;">Edit</a>
                                    </div>
                                </div>
                                <a type="button" class="btn btn-primary" style="margin-left: 85%; position: relative; top: 30px; " asp-controller="admin" asp-action="index">Back</a>
                            }
                            else { 
                            <a type="button" class="btn btn-primary" style="margin-left: 85%; position: relative; top: 30px; " asp-controller="user" asp-action="index">Back</a>
                            }
                            <style>
                                .container {
                                    width: 100%;
                                    display: flex;
                                    justify-content: center;
                                    align-items: center;
                                    margin-top: 30px;
                                }

                                .flex-fill {
                                    margin-left: -86px;
                                }

                                .container-fluid {
                                    width: 600px;
                                    padding-right: 63px;
                                    padding-left: 96px;
                                    margin-right: auto;
                                    margin-left: -86px;
                                }
                            </style>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>
</div>


